<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <CheckBox
        android:id="@+id/checkBox_itemFavorite"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:layout_marginStart="82dp"
        android:layout_marginBottom="80dp"
        android:button="@android:drawable/btn_star"
        android:textColorHighlight="#FFEB3B"
        android:textColorLink="#B3B2AF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_itemFolderImage"
        app:layout_constraintStart_toStartOf="@+id/imageView_itemFolderImage"
        app:layout_constraintTop_toTopOf="@+id/imageView_itemFolderImage" />

    <TextView
        android:id="@+id/textView_itemFolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/temp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_itemFolderImage" />

    <ImageView
        android:id="@+id/imageView_itemFolderImage"

        android:layout_width="110dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:drawable/ic_menu_gallery" />

    <!--            app:layout_constraintHeight_default="percent"-->
<!--            app:layout_constraintHeight_percent=".27"-->



<!--    android:layout_width="175dp"-->
<!--    android:layout_height="175dp"-->

</androidx.constraintlayout.widget.ConstraintLayout>